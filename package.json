{
  "name": "cyclone-api-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/cnbc/OnAir.Cyclone.git"
  },
  "version": "1.0.0",
  "description": "Cyclone API Server",
  "main": "src/server.ts",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "dev": "ts-node src/server.ts",
    "console": "ts-node src/console.ts",
    "db:sync": "ts-node node_modules/typeorm/cli.js schema:sync",
    "db:migrate": "ts-node node_modules/typeorm/cli.js migration:run",
    "db:sync:migrate": "ts-node node_modules/typeorm/cli.js schema:sync && npm run db:migrate",
    "db:revert": "ts-node node_modules/typeorm/cli.js migration:revert"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "class-validator": "^0.11.0",
    "compression": "^1.7.3",
    "cors": "^2.8.4",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-swagger-generator": "^1.1.17",
    "glob": "^7.1.6",
    "helmet": "^3.13.0",
    "http-status": "^1.2.0",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "morgan": "^1.9.1",
    "pg": "^7.18.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "socket.io": "^2.3.0",
    "socket.io-redis": "^5.2.0",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.7",
    "winston": "^3.1.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.2.8",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.2",
    "@types/glob": "^7.1.1",
    "@types/helmet": "^0.0.45",
    "@types/http-status": "^1.1.2",
    "@types/jest": "^25.1.0",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/lodash": "^4.14.149",
    "@types/morgan": "^1.7.35",
    "@types/node": "^13.7.0",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-redis": "^1.0.25",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^4.1.1",
    "@types/yamljs": "^0.2.30",
    "chai": "^4.2.0",
    "concurrently": "^5.0.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.0.0",
    "ts-mockito": "^2.3.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  },
  "keywords": [
    "Clean",
    "Architecture",
    "Onion",
    "Architecture",
    "Node",
    "boilerplate",
    "Onion",
    "node",
    "boilerplate"
  ],
  "author": "Sudharsan Gandhi",
  "license": "ISC"
}
